doctype html
html
  head
    meta(charset='utf-8')
    title Raptor - Node.js Deploy Server
    link(rel='stylesheet', href='/css/style.css')
  body
    table#input
      tbody
        tr
          td Subdomain
          td: input#subdomain(type='text', placeholder='calculator.bob.com', autofocus=true)
        tr
          td Port
          td: input#port(type='text', placeholder='3125')
        tr
          td Git Repository
          td: input#repository(type='text', placeholder='https://github.com/rwaldron/johnny-five')
        tr
          td Install Command
          td: input#install(type='text', placeholder='npm install')
        tr
          td Startup Command
          td: input#startup(type='text', placeholder='PORT=3125 pm2 start app/index.js --name johnny-five')

    #buttons
      button.safe#add Add
      button.safe#clear Clear Console
      button.safe#free-mem Free Memory
      button.safe#cpu CPU Utilization
      button.safe#list PM2 List
      button.warn#proxy Update Proxy
      button.warn#raptor Update Raptor
      button.alert#delete-all Delete All
      button.alert#reboot Reboot

    #projects
      include projects

    #console

    script(src='/socket.io/socket.io.js')
    script(src='/js/vendor/jquery-2.1.1.min.js')
    script(src='/js/vendor/lodash.min.js')
    script(src='/js/code/raptor.js')

